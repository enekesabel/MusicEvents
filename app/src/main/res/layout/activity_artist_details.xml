<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="enekes.abel.musicevents.ui.artists.artist_details.ArtistDetailsPresenter" />

        <variable
            name="artist"
            type="enekes.abel.musicevents.model.Artist" />

        <variable
            name="layoutManager"
            type="android.support.v7.widget.RecyclerView.LayoutManager" />

        <variable
            name="eventsAdapter"
            type="enekes.abel.musicevents.ui.events.EventRecyclerViewAdapter" />
    </data>

    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.artists.artist_details.ArtistDetailsActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <include
            layout="@layout/content_artist_details"
            app:artist="@{artist}"
            app:eventsAdapter="@{eventsAdapter}"
            app:layoutManager="@{layoutManager}"/>

    </android.support.design.widget.CoordinatorLayout>
</layout>